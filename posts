<script>
    $(document).ready(function(e){
        init(e);
        loadMallDataCached(renderPageData);
    });
    
    function renderPageData(){
        var blog = getBlogDataBySlug("carlingwood-shop-the-look").posts;
        
        var blog_posts = blog.sort(function(a, b) {
            return a["publish_date"] - b["publish_date"] || a["id"] - b["id"];
        }).reverse();
        // blog.sortBy(function(o){ return o.publish_date}).reverse();
        console.log("blog_posts", blog_posts)
        // var blog_posts = getBlogDataBySlug('').posts.reverse();
        var main_post = blog_posts[0];
        renderSinglePost('#main_post_container', "#main_post_template", main_post);

        var posts = blog_posts.splice(1);
        console.log("posts", posts)
        renderPosts('#posts_container', '#posts_template', posts);
        show_content();
        load_more(1);
            
        $('#load_more_posts').click(function(e){
            var i = $('#num_loaded').val();
            load_more(i);
            e.preventDefault();
        });
    }
</script>